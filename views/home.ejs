<%- include("partials/header"); -%>

<h2>Create New Event:</h2>
<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="titleOfEvent">Title</label>
    <input type="text" class="form-control" name="eventTitle" placeholder="Enter title of your event">
  </div>

  <div class="form-group">
    <label for="hoursRequired">Hours required per week</label>
    <input type="text" class="form-control" name="eventBody" placeholder="Hours required">
    <small class="form-text text-muted">Enter the number of hours you'd like to dedicate to this event per week. Eg: 7</small>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Create Event</button>

</form>




